@model MusicPortal.BLL.DTO.MusicDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Song</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Title:</label>
                <input asp-for="Title" class="form-control" placeholder="Enter song title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GenreID" class="control-label">Genre:</label>
                <select asp-for="Genre" class="form-control">
                    <option value="">Select Genre</option>
                    @if (ViewBag.Genres != null)
                    {
                        foreach (var genre in ViewBag.Genres)
                        {
                            <option value="@genre.Id">@genre.Title</option>
                        }
                    }
                </select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MusicPath" class="control-label">Music File:</label>
                <input type="file" name="Music" class="form-control-file" />
                <span asp-validation-for="MusicPath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PosterPath" class="control-label">Poster Image:</label>
                <input type="file" name="Poster" class="form-control-file" />
                <span asp-validation-for="PosterPath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Song</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
