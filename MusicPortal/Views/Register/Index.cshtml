@model MusicPortal.BLL.DTO.RegisterDTO

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Resources.Resource.Register</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">@Resources.Resource.Register</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">@Resources.Resource.Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Resources.Resource.ConfirmPass</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Resource.Register" class="btn btn-primary btn-block" />
            </div>
            <div class="text-center">
                <a asp-action="GoToLogon" class="btn btn-link">@Resources.Resource.BackToLog</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
