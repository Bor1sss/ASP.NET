@model IEnumerable<MusicPortal.BLL.DTO.UserDTO>

@{
    ViewData["Title"] = "AdminPanel";
}

<h1>AdminPanel</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVerified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isVerified)
            </td>
            <td>
                    @if (!item.isVerified)
                    {
                        <form  asp-action="Verify" asp-route-id="@item.Id" method="post">
                            <button type="submit">VERIFIED</button>
                        </form>
                    }

            </td>
     
         
        </tr>
}



    </tbody>
</table>
